<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Asunto</th>
      <th>Mensaje</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.subject %></td>
        <td><%= contact.message %></td>
        <td>
          <%= link_to  contact, method: :delete, data: { confirm: '¿Confirma la eliminación del contacto?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

