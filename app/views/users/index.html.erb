<div class="row justify-content-center">
  <div class="col-auto">
    <p id="notice"><%= notice %></p>

    <h1>Usuarios</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Access level</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.access_level %></td>
            <td>
              <%= link_to user do %>
                <i class="far fa-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_user_path(user) do %>
                <i class="far fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to  user, method: :delete, data: { confirm: "Confirme la eliminaciÃ³n del registro del usuario #{user.name}" } do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Usuario', new_user_path %>

  </div>
</div>